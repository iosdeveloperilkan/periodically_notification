rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Daily items collection - read allowed for authenticated users
    match /daily_items/{itemId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Daily state - read allowed for authenticated users
    match /daily_state/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
  }
}


